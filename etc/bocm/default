# Root disk device:
# Mozliwe dwie formy definiowania dyskow,
# krotka - wygodna w uzyciu ale jesli dyski zmieniaja swoja kolejnosc podczas startu to zle dziala
# dluga - malo wygodna ale odporna na zmiany kolejnosci dyskow miedzy restartami
#export DISKDEV="/dev/sda"
export DISKDEV=/dev/disk/by-path/pci-0000:03:00.0-nvme-1

# Root volume group
export VG_NAME=vgroot

# File with default volumes
export VOLUMES_FILE=${BOCMDIR}/partitions.yml

# Manual disk menagement
export MANUAL_DISK_MANAGE="no"

export SGDISK=/sbin/sgdisk
